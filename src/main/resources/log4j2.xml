<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Properties>
        <Property name="log-pattern">%d{yyyy-MM-dd HH:mm:ss} - %-5level - %msg%n</Property>
        <Property name="log-dir">logs</Property>
    </Properties>

    <Appenders>
        <!-- Console Appender pour affichage dans la console -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${log-pattern}" />
            <ThresholdFilter level="info" onMatch="ACCEPT" onMismatch="DENY" />
        </Console>

        <!-- File Appender pour enregistrer dans un fichier -->
        <File name="File" fileName="${log-dir}/app.log">
            <PatternLayout pattern="${log-pattern}" />
            <ThresholdFilter level="info" onMatch="ACCEPT" onMismatch="DENY" />
        </File>
    </Appenders>

    <Loggers>
        <!-- Logger principal de l'application -->
        <Logger name="org.springframework.web" level="debug">
            <AppenderRef ref="Console" />
            <AppenderRef ref="File" />
        </Logger>

        <!-- Logger pour les erreurs et exceptions -->
        <Logger name="com.lulippe.paymybuddy" level="error">
            <AppenderRef ref="Console" />
            <AppenderRef ref="File" />
        </Logger>

        <!-- Logger pour les informations générales -->
        <Logger name="com.lulippe.paymybuddy" level="info">
            <AppenderRef ref="Console" />
            <AppenderRef ref="File" />
        </Logger>

        <!-- Logger pour les informations de débogage -->
        <Logger name="com.lulippe.paymybuddy" level="debug">
            <AppenderRef ref="Console" />
            <AppenderRef ref="File" />
        </Logger>

        <Root level="info">
            <AppenderRef ref="Console" />
            <AppenderRef ref="File" />
        </Root>
    </Loggers>
</Configuration>